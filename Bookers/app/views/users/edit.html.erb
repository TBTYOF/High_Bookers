<h1>User info</h1>
<%= form_for(@user) do |f| %>
	<label for="user_name">Name</label>
	<%= f.text_field :name %>
	<label for="user_profile_image">Image</label>
	<%= f.attachment_field :profile_image %>
	<label for="user_introduction">Introduction</label>
	<%= f.text_area :introduction %>
	<%= f.submit 'Update User' %>
<% end %>