<% if @user.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<h2 class="error_font"><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h1>User info</h1>
			<%= form_for(@user) do |f| %>
			<div class="col-xs-8" style="padding-left: 0; margin-bottom: 10px;">
				<label for="user_name">Name</label>
				<%= f.text_field :name, class: "col-xs-12" %>
			</div>
			<label for="user_profile_image" class="col-xs-6" style="padding-left: 0;">Image</label>
			<%= f.attachment_field :profile_image %>
			<label for="user_introduction" style="margin-top: 10px;">Introduction</label>
			<%= f.text_area :introduction, class: "col-xs-12", style: "margin-bottom: 10px;" %>
				<%= f.submit 'Update User', class: "btn-block" %>
			<% end %>
		</div>
	</div>
</div>