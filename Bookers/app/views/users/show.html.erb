<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
			<table class="table">
				<tbody>
					<tr>
						<td>name</td>
						<td><%= @user.name %></td>
					</tr>
					<tr>
						<td>intoroduction</td>
						<td><%= @user.introduction %></td>
					</tr>
				</tbody>
			</table>
			<%= link_to edit_user_path(@user), class: "btn btn-default btn-block" do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>
			<h2>New book</h2>
			<%= form_for(@book, url: books_path) do |f| %>
				<label for="book_title">Title</label>
				<%= f.text_field :title %>
				<label for="book_opinion">Opinion</label>
				<%= f.text_area :body %>
				<%= f.submit 'Create Book' %>
			<% end %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 30,30, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>