<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 40,40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>