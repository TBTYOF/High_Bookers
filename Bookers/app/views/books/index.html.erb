<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render "layouts/user_info", signin_user: @signin_user, new_book: @new_book %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 30,30, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>