<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>Book show</h2>
		</div>
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tbody>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 30,30, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
						<td><%= link_to @book.title, book_path(@book) %></td>
						<td><%= @book.body %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>